<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/landingFragment">

    <fragment
        android:id="@+id/initialEnterFragment"
        android:name="com.tsarsprocket.reportmid.InitialEnterFragment"
        android:label="Find your summoner">
        <action
            android:id="@+id/action_initialEnterFragment_to_landingFragment"
            app:destination="@id/landingFragment"
            app:popUpTo="@id/landingFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/landingFragment"
        android:name="com.tsarsprocket.reportmid.LandingFragment"
        android:label="Summoner's Page'">
        <action
            android:id="@+id/action_landingFragment_to_matchHistoryFragment"
            app:destination="@id/matchHistoryFragment"
            app:launchSingleTop="true"
            app:popUpTo="@id/landingFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_landingFragment_to_matchupFragment"
            app:destination="@id/matchupFragment"
            app:launchSingleTop="true"
            app:popUpTo="@id/landingFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <action
        android:id="@+id/action_global_initialEnterFragment"
        app:destination="@id/initialEnterFragment"
        app:popUpTo="@id/initialEnterFragment"
        app:popUpToInclusive="true"
        />
    <fragment
        android:id="@+id/matchHistoryFragment"
        android:name="com.tsarsprocket.reportmid.MatchHistoryFragment"
        android:label="MatchHistoryFragment" >
        <action
            android:id="@+id/action_matchHistoryFragment_to_matchupFragment"
            app:destination="@id/matchupFragment"
            app:launchSingleTop="true"
            app:popUpTo="@id/matchHistoryFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_matchHistoryFragment_to_landingFragment"
            app:destination="@id/landingFragment"
            app:launchSingleTop="true"
            app:popUpTo="@id/matchHistoryFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <action
        android:id="@+id/action_global_matchHistoryFragment"
        app:destination="@id/matchHistoryFragment"
        app:popUpTo="@id/matchHistoryFragment"
        app:popUpToInclusive="true"
        />
    <fragment
        android:id="@+id/matchupFragment"
        android:name="com.tsarsprocket.reportmid.MatchupFragment"
        android:label="MatchupFragment" >
        <action
            android:id="@+id/action_matchupFragment_to_matchHistoryFragment"
            app:destination="@id/matchHistoryFragment"
            app:launchSingleTop="true"
            app:popUpTo="@id/matchupFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_matchupFragment_to_landingFragment"
            app:destination="@id/landingFragment"
            app:launchSingleTop="true"
            app:popUpTo="@id/matchupFragment"
            app:popUpToInclusive="true" />
        <argument
            android:name="ARG_PUUID"
            app:argType="string" />
    </fragment>
</navigation>