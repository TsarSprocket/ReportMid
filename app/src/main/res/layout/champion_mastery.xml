<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:paddingStart="5dp"
    android:paddingEnd="5dp"
    android:visibility="gone"
    >

    <ImageView
        android:tag="@string/fragment_landing_tag_champion_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:tag="@string/fragment_landing_tag_champion_name"
        android:id="@+id/txtChampName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <TextView
        android:tag="@string/fragment_landing_tag_champion_level"
        android:id="@+id/txtChampLevel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:tag="@string/fragment_landing_tag_champion_points"
        android:id="@+id/txtChampPoints"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>

